@page "/crud/{url?}"
@model EasyDataBasicDemo.Pages.EasyDataModel
@{
    ViewData["Title"] = "EasyData";
}

@* <link rel="stylesheet" href="/css/easydata.css" /> *@

<div id="EasyDataContainer"></div>

@section Scripts {
    <!--- When we want use the local compiled script -->
    <script src="/js/easydata.js" type="text/javascript"></script>
    
    <script>
    window.addEventListener('load', () => {
        easydata.runDispatcher({
            basePath: 'crud',
            endpoint: '/api/easy-crud',
            usePluralNames: false
            //dataTable: {
            //    elasticChunks: true
            //}
            // rootEntity: 'Customer'
        })
    });
    </script>
}