{
	"compileOnSave": false,
	"compilerOptions": {
		"noImplicitAny": false,
		"strictNullChecks" : false,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"module": "es6",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es5", "dom"],
		"baseUrl": ".",
		"outDir": "./dist",
		"noEmitOnError": true
	  },
	"include": [
		"./src/**/*.ts"
	]
}