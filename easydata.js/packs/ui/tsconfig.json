{
	"compileOnSave": false,
	"compilerOptions": {
		"noImplicitAny": false,
		"strictNullChecks" : false,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"module": "es6",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"typeRoots": ["node_modules/@types"],
		"lib": ["ESNext", "dom"],
		"baseUrl": ".",
		"outDir": "./dist/types",
		"noEmitOnError": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
